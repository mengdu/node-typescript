{
  "name": "node-typescript-koa",
  "version": "1.0.0",
  "description": "Typescript node koa 实践",
  "main": "index.js",
  "scripts": {
    "start": "tsc && node index.js",
    "dev": "nodemon --watch src/**/* -e ts,tsx --exec ts-node src/index.ts",
    "dev-debug": "nodemon --inspect --watch src/**/* -e ts,tsx --exec node -r ts-node/register src/index.ts",
    "compile": "npm run clean && tsc",
    "lint": "eslint src --ext .ts",
    "lintfix": "eslint src --ext .ts --fix",
    "clean": "rm dest -rf",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/koa": "^2.0.46",
    "@types/koa-router": "^7.0.32",
    "@types/node": "^10.11.0",
    "eslint": "^5.6.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-typescript": "^0.12.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3",
    "typescript-eslint-parser": "^19.0.2"
  },
  "dependencies": {
    "dotenv": "^6.0.0",
    "koa": "^2.5.3",
    "koa-router": "^7.4.0"
  }
}
